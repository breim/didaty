<div class="nested-fields">

    <div class="panel panel-primary">
        <div class="panel-heading">
            <h3 class="panel-title">Conceito</h3>
        </div>
        <div class="panel-body">
            <div class="row">
                <div class="col-sm-3">
                    <div class="field">
                        <%= f.input :name %>
                    </div>
                </div>
                <div class="col-sm-3">
                    <div class="field">
                        <%= f.input :payment %>
                    </div>
                </div>
                <div class="col-sm-3">
                    <div class="field">
                        <%= f.input :fiat %>
                    </div>
                </div>
                <div class="col-sm-3">
                    <%= link_to_remove_association "<i class='fa fa-trash'></i>".html_safe, f, class: 'btn btn-danger btn-xs pull-right'%>
                </div>
            </div>
            <div id="contents">
                <%= f.simple_fields_for :contents do |content| %>
                    <%= render 'content_fields', f: content %>
                <% end %>
                <div class="form-group">
                    <%= link_to_add_association "<i class='fa fa-plus'></i> Adicionar conteÃºdo".html_safe, f, :contents, class: 'btn btn-default btn-xs' %>
                </div>
            </div>
        </div>
    </div>

</div>