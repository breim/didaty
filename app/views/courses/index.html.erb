<p id="notice"><%= notice %></p>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Subtitle</th>
      <th>Description</th>
      <th>Price</th>
      <th>Public</th>
      <th>Deleted</th>
      <th>Category</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= course.name %></td>
        <td><%= course.subtitle %></td>
        <td><%= course.description %></td>
        <td><%= course.price %></td>
        <td><%= course.active %></td>
        <td><%= course.deleted %></td>
        <td><%= course.category %></td>
        <td><%= course.user %></td>
        <td><%= link_to 'Show', course %></td>
        <td><%= link_to 'Edit', edit_course_path(course) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

